<UserControl
    x:Class="MediaPlayer.UserControls.MediaFileTemplateZoomedOutUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaPlayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Loaded="Grid_Loaded">
        <Border Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}" Width="95" Height="95">
            <Image Source="{Binding Extension, Converter={StaticResource extensionToBitmapImageConverter}}" Stretch="Fill"/>
        </Border>
    </Grid>
</UserControl>
