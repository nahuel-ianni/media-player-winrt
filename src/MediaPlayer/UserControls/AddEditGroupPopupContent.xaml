<UserControl
    x:Class="MediaPlayer.UserControls.AddEditGroupPopupContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaPlayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel x:Name="Container" Height="50" Orientation="Horizontal">
        <TextBlock Grid.Row="0" x:Uid="Name" Margin="10" Style="{StaticResource BasicTextStyle}" VerticalAlignment="Center"/>
        <TextBox x:Name="GroupNameTextBox" Grid.Row="1" Loaded="GroupNameTextBox_Loaded" KeyUp="GroupNameTextBox_KeyUp" Width="200" Margin="10"/>
    </StackPanel>
</UserControl>
